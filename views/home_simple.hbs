<div class="map-container">
    <div class="map-placeholder">
        <div class="map-message">
            <i class="fas fa-map-marker-alt"></i>
            <h2>ConectaMed</h2>
            <p>Plataforma de geolocalização de serviços de saúde</p>
            <div class="establishments-list">
                <h3>Estabelecimentos Disponíveis:</h3>
                {{#if estabelecimentos}}
                    {{#each estabelecimentos}}
                        <div class="establishment-card">
                            <h4>{{this.nome}}</h4>
                            <p><strong>Endereço:</strong> {{this.enderecoCompleto}}</p>
                            <p><strong>Telefone:</strong> {{this.telefone}}</p>
                            <p><strong>Tipo:</strong> {{this.tipo}}</p>
                            <p><strong>Horário:</strong> {{this.horarioFuncionamento}}</p>
                            <div class="establishment-actions">
                                <a href="/local/{{this._id}}" class="btn btn-primary">Ver Detalhes</a>
                                <a href="tel:{{this.telefone}}" class="btn btn-secondary">Ligar</a>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p>Nenhum estabelecimento encontrado.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>


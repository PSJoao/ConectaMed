    color: #fff;
}

.map-message h2 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    color: #fff;
}

.map-message p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    color: #f0f0f0;
}

.establishments-list {
    text-align: left;
    margin-top: 30px;
}

.establishments-list h3 {
    color: #fff;
    margin-bottom: 20px;
    text-align: center;
}

.establishment-card {
    background: rgba(255, 255, 255, 0.9);
    color: #333;
    padding: 20px;

<!-- Menu de Filtros -->
<div class="filter-menu" id="filterMenu">
    <div class="filter-header">
        <h3>
            <i class="fas fa-filter"></i>
            Filtros
        </h3>
        <button class="filter-close" id="filterClose">
            <i class="fas fa-times"></i>
        </button>
    </div>
    
    <div class="filter-content">
        <!-- Busca Geral -->
        <div class="filter-section">
            <label for="filterSearchInput" class="filter-label">
                <i class="fas fa-search"></i>
                Buscar
            </label>
            <input type="text" id="filterSearchInput" class="filter-input" placeholder="Nome, especialidade, convênio...">
        </div>
        
        <!-- Tipo de Estabelecimento -->
        <div class="filter-section">
            <label class="filter-label">
                <i class="fas fa-building"></i>
                Tipo de Estabelecimento
            </label>
            <div class="filter-checkboxes">
                <label class="checkbox-label">
                    <input type="checkbox" name="tipo" value="clinica" class="filter-checkbox">
                    <span class="checkbox-text">Clínicas</span>
                </label>
                <label class="checkbox-label">
                    <input type="checkbox" name="tipo" value="orgao_publico" class="filter-checkbox">
                    <span class="checkbox-text">Órgãos Públicos</span>
                </label>
            </div>
        </div>
        
        <!-- Especialidades -->
        <div class="filter-section">
            <label class="filter-label">
                <i class="fas fa-stethoscope"></i>
                Especialidades
            </label>
            <div class="filter-checkboxes" id="especialidadesContainer">
                <!-- Carregado dinamicamente -->
            </div>
        </div>
        
        <!-- Convênios -->
        <div class="filter-section">
            <label class="filter-label">
                <i class="fas fa-credit-card"></i>
                Convênios
            </label>
            <div class="filter-checkboxes" id="conveniosContainer">
                <!-- Carregado dinamicamente -->
            </div>
        </div>
        
        <!-- Raio de Busca -->
        <div class="filter-section">
            <label for="raioSlider" class="filter-label">
                <i class="fas fa-map-marker-alt"></i>
                Raio de Busca: <span id="raioValue">10</span> km
            </label>
            <input type="range" id="raioSlider" class="filter-slider" min="1" max="50" value="10">
        </div>
    </div>
    
    <div class="filter-actions">
        <button class="btn btn-outline" id="clearFilters">
            <i class="fas fa-eraser"></i>
            Limpar Filtros
        </button>
        <button class="btn btn-primary" id="applyFilters">
            <i class="fas fa-check"></i>
            Aplicar Filtros
        </button>
    </div>
</div>

<!-- Overlay para fechar o menu -->
<div class="filter-overlay" id="filterOverlay"></div>




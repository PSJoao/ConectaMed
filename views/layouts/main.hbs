<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - ConectaMed</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/map.css">
    <link rel="stylesheet" href="/styles/responsive.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Meta tags para SEO -->
    <meta name="description" content="ConectaMed - Plataforma de geolocalização de serviços de saúde">
    <meta name="keywords" content="saúde, médicos, clínicas, geolocalização, saúde pública">
    <meta name="author" content="ConectaMed">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{title}} - ConectaMed">
    <meta property="og:description" content="Encontre serviços de saúde próximos a você">
    <meta property="og:type" content="website">
    <meta property="og:url" content="http://localhost:5000">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body class="fullscreen-map">
    <!-- Header Centralizado -->
    <header class="main-header">
        <div class="header-content">
            <!-- Logo e Nome Centralizados -->
            <div class="logo-container">
                <div class="logo">
                    <i class="fas fa-heartbeat"></i>
                    <span class="logo-text">ConectaMed</span>
                </div>
            </div>
            
            <!-- Botões de Ação -->
            <div class="header-actions">
                <!-- Menu (Esquerda) -->
                <div class="action-group left">
                    <button class="action-btn menu-btn" id="menuBtn" title="Menu">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="search-container" id="searchContainer">
                        <input type="text" class="search-input" id="searchInput" placeholder="Buscar estabelecimentos...">
                        <button class="search-btn" id="searchBtn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Filtros (Direita) -->
                <div class="action-group right">
                    <button class="action-btn filter-btn" id="filterBtn" title="Filtros">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Mapa Principal (Ocupa toda a tela) -->
    <main class="map-main">
        <div id="map" class="map"></div>
        
        <!-- Loading do Mapa -->
        <div class="map-loading" id="mapLoading">
            <div class="loading-spinner"></div>
            <p>Carregando mapa...</p>
        </div>
    </main>

    <!-- Menu Lateral Esquerdo -->
    <div class="side-menu" id="sideMenu">
        <div class="menu-content">
            <div class="menu-header">
                <h3>Menu</h3>
                <button class="menu-close" id="menuClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="menu-body">
                <nav class="menu-nav">
                    <a href="/" class="menu-item">
                        <i class="fas fa-home"></i>
                        <span>Início</span>
                    </a>
                    <a href="/sobre" class="menu-item">
                        <i class="fas fa-info-circle"></i>
                        <span>Sobre</span>
                    </a>
                    <a href="/contato" class="menu-item">
                        <i class="fas fa-envelope"></i>
                        <span>Contato</span>
                    </a>
                    {{#if isAuthenticated}}
                        <a href="/perfil" class="menu-item">
                            <i class="fas fa-user"></i>
                            <span>Meu Perfil</span>
                        </a>
                        <a href="/logout" class="menu-item">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Sair</span>
                        </a>
                    {{else}}
                        <button class="menu-item login-btn" id="loginBtn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Entrar</span>
                        </button>
                        <button class="menu-item register-btn" id="registerBtn">
                            <i class="fas fa-user-plus"></i>
                            <span>Cadastrar</span>
                        </button>
                    {{/if}}
                </nav>
            </div>
        </div>
    </div>

    <!-- Menu de Filtros -->
    {{> filterMenu}}

    <!-- Modais -->
    {{> loginModal}}
    {{> registerModal}}

    <!-- Overlay para modais -->
    <div class="modal-overlay" id="modalOverlay"></div>

    <!-- Scripts -->
    <script src="/scripts/layout.js"></script>
    <script src="/scripts/filters.js"></script>
    <script src="/scripts/map.js"></script>
    <script src="/scripts/capacitor.js"></script>
    <script src="/scripts/modals.js"></script>
    
    <!-- Google Maps API -->
    <script>
        const googleMapsApiKey = "{{googleMapsApiKey}}";
        
        // Carregar Google Maps API
        function loadGoogleMaps() {
            if (typeof google !== 'undefined') {
                initMap();
                return;
            }
            
            const script = document.createElement('script');
            script.src = `https://maps.googleapis.com/maps/api/js?key=${googleMapsApiKey}&callback=initMap&libraries=places,geometry&loading=async`;
            script.async = true;
            script.defer = true;
            script.onerror = function() {
                console.error('Erro ao carregar Google Maps API');
                showMapError('Erro ao carregar o mapa. Verifique sua conexão com a internet.');
            };
            document.head.appendChild(script);
        }
        
        // Inicializar quando a página carregar
        document.addEventListener('DOMContentLoaded', loadGoogleMaps);
    </script>
</body>
</html>

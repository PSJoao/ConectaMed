<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - ConectaMed</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/map.css">
    <link rel="stylesheet" href="/styles/responsive.css">
    <!-- Leaflet CSS (OpenStreetMap) -->
    <link
        rel="stylesheet"
        href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
        integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
        crossorigin=""
    />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Meta tags para SEO -->
    <meta name="description" content="ConectaMed - Plataforma de geolocalização de serviços de saúde">
    <meta name="keywords" content="saúde, médicos, clínicas, geolocalização, saúde pública">
    <meta name="author" content="ConectaMed">
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{title}} - ConectaMed">
    <meta property="og:description" content="Encontre serviços de saúde próximos a você">
    <meta property="og:type" content="website">
    <meta property="og:url" content="http://localhost:5000">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body class="fullscreen-map">
    <!-- Header Centralizado -->
    <header class="main-header">
        <div class="header-content">
            <!-- Logo e Nome Centralizados -->
            <div class="logo-container">
                <div class="logo">
                    <i class="fas fa-heartbeat"></i>
                    <span class="logo-text">ConectaMed</span>
                </div>
            </div>
            
            <!-- Botões de Ação -->
            <div class="header-actions">
                <!-- Menu (Esquerda) -->
                <div class="action-group left">
                    <button class="action-btn menu-btn" id="menuBtn" title="Menu">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="search-container" id="searchContainer">
                        <input type="text" class="search-input" id="searchInput" placeholder="Buscar estabelecimentos...">
                        <button class="search-btn" id="searchBtn">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Filtros (Direita) -->
                <div class="action-group right">
                    <button class="action-btn filter-btn" id="filterBtn" title="Filtros">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Mapa Principal (Ocupa toda a tela) -->
    <main class="map-main">
        <div id="map" class="map"></div>
        
        <!-- Loading do Mapa -->
        <div class="map-loading" id="mapLoading">
            <div class="loading-spinner"></div>
            <p>Carregando mapa...</p>
        </div>
    </main>

    <!-- Controles do Mapa -->
    <div class="map-controls">
        <button class="map-control-btn" id="centerMapBtn" title="Centralizar no meu local">
            <i class="fas fa-location-arrow"></i>
        </button>
        <button class="map-control-btn" id="zoomInBtn" title="Aproximar">
            <i class="fas fa-plus"></i>
        </button>
        <button class="map-control-btn" id="zoomOutBtn" title="Afastar">
            <i class="fas fa-minus"></i>
        </button>
    </div>

    <!-- Lista de Resultados Flutuante -->
    <div class="results-panel" id="resultsPanel">
        <div class="results-header">
            <h3>Estabelecimentos Encontrados</h3>
            <div class="results-count">
                <span id="resultsCount">0</span> estabelecimentos
            </div>
            <button class="results-close" id="resultsClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="results-list" id="resultsList">
            <!-- Resultados carregados dinamicamente -->
        </div>
        
        <div class="no-results" id="noResults" style="display: none;">
            <div class="no-results-content">
                <i class="fas fa-search"></i>
                <h4>Nenhum estabelecimento encontrado</h4>
                <p>Tente ajustar os filtros ou expandir o raio de busca</p>
                <button class="btn btn-primary" id="adjustFiltersBtn">Ajustar Filtros</button>
            </div>
        </div>
    </div>

    <!-- Menu Lateral Esquerdo -->
    <div class="side-menu" id="sideMenu">
        <div class="menu-content">
            <div class="menu-header">
                <h3>Menu</h3>
                <button class="menu-close" id="menuClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="menu-body">
                <nav class="menu-nav">
                    <a href="/" class="menu-item">
                        <i class="fas fa-home"></i>
                        <span>Início</span>
                    </a>
                    <a href="/sobre" class="menu-item">
                        <i class="fas fa-info-circle"></i>
                        <span>Sobre</span>
                    </a>
                    <a href="/contato" class="menu-item">
                        <i class="fas fa-envelope"></i>
                        <span>Contato</span>
                    </a>
                    {{#if isAuthenticated}}
                        <a href="/perfil" class="menu-item">
                            <i class="fas fa-user"></i>
                            <span>Meu Perfil</span>
                        </a>
                        <a href="/logout" class="menu-item">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Sair</span>
                        </a>
                    {{else}}
                        <button class="menu-item login-btn" id="loginBtn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Entrar</span>
                        </button>
                        <button class="menu-item register-btn" id="registerBtn">
                            <i class="fas fa-user-plus"></i>
                            <span>Cadastrar</span>
                        </button>
                    {{/if}}
                </nav>
            </div>
        </div>
    </div>

    <!-- Menu de Filtros -->
    {{> filterMenu}}

    <!-- Modais -->
    {{> loginModal}}
    {{> registerModal}}
    {{> detailsModals}}

    <!-- Overlay para modais -->
    <div class="modal-overlay" id="modalOverlay"></div>

    <!-- Scripts -->
    <!-- Leaflet JS (OpenStreetMap) -->
    <script
        src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin=""
    ></script>
    <script src="/scripts/layout.js"></script>
    <script src="/scripts/filters.js"></script>
    <script src="/scripts/map.js"></script>
    <script src="/scripts/modals.js"></script>
</body>
</html>
